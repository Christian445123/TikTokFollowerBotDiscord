# Beispiel .env
DISCORD_TOKEN=      # Discord Bot Token
GUILD_ID=           # z.B. 123456789012345678

# Allgemeiner Channel (optional). Wird genutzt, wenn keine separaten CHANNEL_ID_TIKTOK/INSTAGRAM gesetzt sind.
CHANNEL_ID=0

# Optional: separate Channel-IDs pro Plattform (überschreiben CHANNEL_ID)
CHANNEL_ID_TIKTOK=0
CHANNEL_ID_INSTAGRAM=0

# Plattform-Benutzernamen (ohne @)
TIKTOK_USERNAME=dein_tiktok_name
INSTAGRAM_USERNAME=dein_instagram_name

# Aktivierung: true/false (optional)
# Wenn nicht gesetzt, werden Plattformen automatisch aktiviert, wenn USERNAME gesetzt ist.
ENABLE_TIKTOK=true
ENABLE_INSTAGRAM=true

# Wenn du eine bestimmte Profil-URL hast, die zuverlässig funktioniert, setze sie:
INSTAGRAM_PROFILE_URL=https://www.instagram.com/INSTAGRAM_USERNAME/#

# Optional: Instagram cookie (sensibel) - nur wenn nötig
INSTAGRAM_COOKIE=

# Default 4 Stunden (14400 Sekunden)
UPDATE_INTERVAL=14400

# Optional: eigener User-Agent
USER_AGENT=Mozilla/5.0 (iPhone; CPU iPhone OS 14_0 like Mac OS X) AppleWebKit/605.1.15 (KHTML, like Gecko) Version/14.0 Mobile/15E148 Safari/604.1

# Für detailliertes Debugging:
LOG_LEVEL=INFO